{
    "example_1": {
        "model": "gpt-4.1",
        "temperature": 0.5,
        "messages": [
            {"role": "system",  "content": "You are a helpful assistant."},
            {"role": "user",    "content": "Say hello world and number 1."}
        ],
        "schema": {
            "type": "json_schema",
                "json_schema": {
                    "name": "ExampleSchema",
                    "strict": true,
                    "schema": {
                        "type": "object",
                        "properties": {
                            "text":   {"type": "string"},
                            "number": {"type": "integer"}
                        },
                        "required": ["text", "number"],
                        "additionalProperties": false
                    }
                }
            }
        },
    "smart_summary": {
        "model": "gpt-4.1",
        "temperature": 0.5,
        "messages": [
            {
                "role": "system",
                "content": "You are an expert AI assistant specialized in identifying and analyzing legal documents. Produce concise, accurate summaries that preserve key terminology and nuances, and structure your output logically. You must response in {output_language} language."
            },
            {
                "role": "user",
                "content": "Summarize the following legal document. In your response, include:\n  1. Key facts\n  2. Legal issues presented\n  3. Court’s (or parties’) conclusions\n  4. Important definitions or terms\n\nDocument:\n{document_text}"
            }
        ],
        "schema": {
            "type": "json_schema",
                "json_schema": {
                    "name": "SummarySchema",
                    "strict": true,
                    "schema": {
                        "type": "object",
                        "properties": {
                            "summary_short": {
                                "type": "string",
                                "description": "One-sentence summary capturing the type of the document."
                            },
                            "summary_long": {
                                "type": "string",
                                "description": "A 4–5 sentence overview describing the type of the document and covering key facts, legal issues, and conclusions."
                            },
                            "document_type": {
                                "type": "string",
                                "description": "The type of the document, e.g., 'contract', 'court ruling', 'rental agreement', etc."
                            }
                        },
                        "required": ["summary_short", "summary_long", "document_type"],
                        "additionalProperties": false
                    }
                }
            }
        }
}
